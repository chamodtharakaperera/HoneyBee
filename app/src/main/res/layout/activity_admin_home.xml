<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:backgroundTint="#FFFFFF"
    tools:context=".ui.AdminHome">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Welcome Administrator !"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFoodInserter"
        android:layout_width="208dp"
        android:layout_height="65dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/editround"
        android:onClick="foodinsert"
        android:text="Own Food Inserter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnAnnualReport"
        android:layout_width="196dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/editround"
        android:onClick="annualRep"
        android:text="Annual Report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOtherInserter" />

    <Button
        android:id="@+id/btnOtherInserter"
        android:layout_width="355dp"
        android:layout_height="62dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/editround"
        android:onClick="otherShops"
        android:text="Food From Other Shops Inserter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnFoodInserter" />
</androidx.constraintlayout.widget.ConstraintLayout>