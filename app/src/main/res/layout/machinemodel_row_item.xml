<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:elevation="15dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/model_recycler"
        android:layout_width="match_parent"
        android:layout_height="152dp">

        <ImageView
            android:id="@+id/machine_model_image"
            android:layout_width="150dp"
            android:layout_height="152dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/m1" />

        <TextView
            android:id="@+id/modelname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/semibold"
            android:text="Machine Model Name"
            android:textColor="#091020"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/machine_model_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/modelprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/semibold"
            android:text="Model Price"
            android:textColor="#091020"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/machine_model_image"
            app:layout_constraintTop_toBottomOf="@+id/modelname" />

        <TextView
            android:id="@+id/machinemodelname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/semibold"
            android:text="Toshiba"
            android:textColor="#FF9800"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/machine_model_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
